# Application Configuration
NODE_ENV=development
PORT=3000
APP_VERSION=1.0.0
SERVICE_NAME=agentic-ai-news
INSTANCE_ID=

# Database Configuration
DATABASE_URL=

# ðŸš¨ TELEMETRY SAFETY CONTROLS
# DISABLE_TELEMETRY=true              # Completely disable all telemetry (safest)
# TELEMETRY_MODE=off                  # Same as above
# TELEMETRY_MODE=minimal              # Only error logging + health endpoint
# TELEMETRY_MODE=full                 # Full telemetry (use with caution in prod)
# TELEMETRY_MODE=development          # All features enabled

# Logging Configuration
LOG_LEVEL=debug

# OpenTelemetry Configuration
OTLP_ENABLED=false
OTLP_ENDPOINT=http://localhost:4318/v1/traces

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Security
CORS_ORIGIN=*
HELMET_ENABLED=true

# Monitoring Endpoints (disabled in production by default)
HEALTH_CHECK_PATH=/health
METRICS_PATH=/metrics
ERRORS_PATH=/errors
DEBUG_PATH=/debug